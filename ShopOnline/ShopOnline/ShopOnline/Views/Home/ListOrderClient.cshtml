@model IEnumerable<Model.ViewModel.OrderEntity>
@{
    ViewBag.Title = "ListOrderClient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jscollapse{


}
<table class="table">
    <tr>
        <th>
            Ngày đặt
        </th>
        <th>
            Ngày giao
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                Giao từ 2-3 ngày
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>	@Html.ActionLink("Cancel", "CancelOrder", new { id = item.ID })</td>

            <td>
                <button type="button" class="pest_btn" data-toggle="collapse" data-target="#@item.ID">
                    More
                </button>
            </td>
        </tr>
        <tr>

            <td colspan="5">

                <div class="card-body collapse hile" id="@item.ID">
                    @Html.Action("ListOrderDetailClient", "Home", new { id = item.ID })
                </div>
            </td>
        </tr>

    }

</table>


