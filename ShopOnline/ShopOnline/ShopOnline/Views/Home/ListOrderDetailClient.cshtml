@model IEnumerable<Model.ViewModel.OrderDetailEntity>

<div class="row">
    <div class="col-md-12">

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.ItemId)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.OrderID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Image)
                </th>

            </tr>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.ItemId)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderID)
                    </td>
                    <td>@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ")đ</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
                    <td>
                        <img class="resize-image-cart" style="width:150px;height:200px;" src="@item.Product.Image" />
                    </td>
                </tr>}  

        </table>

    </div>
</div>