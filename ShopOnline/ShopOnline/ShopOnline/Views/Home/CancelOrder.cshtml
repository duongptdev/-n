@model IEnumerable<Model.ViewModel.OrderDetailEntity>
@{
    ViewBag.Title = "CancelOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.ItemId)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.OrderID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Image)
                </th>

            </tr>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.ItemId)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
                    <td>
                        <img class="resize-image-cart img-responsive" style="width:150px;height:200px;" src="@item.Product.Image" />
                    </td>
                </tr>}

        </table>

    </div>
</div>
<div class="col-md-12">

    @using (Html.BeginForm("CancelOrder", "Home", FormMethod.Post, new
    {
        enctype = "multipart/form-data"
    }))
    {
        @Html.AntiForgeryToken()
        <div class="container" align="center">

            <div class="col-md-5">
                <input type="text"
                       id="id"
                       name="id"
                       value="@ViewBag.id"
                       class="form-control" readonly />
            </div>
            <br />

            <input type="submit" value="Cancel" title="Save" class="btn btn-primary" />



        </div>

    }




</div>

