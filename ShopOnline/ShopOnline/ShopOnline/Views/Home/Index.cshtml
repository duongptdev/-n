
@model PagedList.IPagedList<Model.EF.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listNewProducts = (List<Model.EF.Product>)ViewBag.NewProduct;
}
<div class="container py-xl-4 py-lg-2">
    <!-- tittle heading -->
    <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
        <span>O</span>ur
        <span>N</span>ew
        <span>P</span>roducts
    </h3>
    <!-- //tittle heading -->
    <div class="row">
        <!-- product left -->
        <div class="agileinfo-ads-display col-lg-9">
            <div class="wrapper">
                <!-- first section -->
                <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">
                    <h3 class="heading-tittle text-center font-italic">New Watch</h3>
                    <div class="row">
                        @foreach (var item in listNewProducts)
                        {
                            if (item.Quantity > 0)
                            {
                                <div class="col-md-4 product-men mt-5">
                                    <div class="men-pro-item simpleCart_shelfItem">
                                        <div class="men-thumb-item text-center">
                                            <img src="@item.Image" style="width:200px;height:250px;" alt="">
                                            <div class="men-cart-pro">
                                                <div class="inner-men-cart-pro">
                                                    <a href="@Url.Action("Details","Home",new { id=item.ID})" class="link-product-add-cart">Quick View</a>
                                                </div>
                                                <span class="product-new-top">New</span>
                                            </div>
                                        </div>
                                        <div class="item-info-product text-center border-top mt-4">
                                            <h4 class="pt-1">
                                                <a href="@Url.Action("Details","Home",new { id=item.ID})">@(ShopOnline.Controllers.HomeController.getString(item.Name))</a>
                                            </h4>
                                            <h4 class="pt-1">
                                                <a href="@Url.Action("Details","Home",new { id=item.ID})">@item.MetaTitle</a>
                                            </h4>
                                            <h4 class="pt-1">
                                                còn hàng
                                            </h4>
                                            <div class="info-product-price my-2">
                                                <span class="item_price">@(string.Format("{0:#,##0}", item.Price))đ</span>
                                                <del>@(string.Format("{0:#,##0}", ((item.Price * 100) / 10)))đ</del>
                                            </div>
                                            <h3 class="text-center"><a class="btn btn-success btn-sm item_add item_1" href="@Url.Action("ThemVaoGio", "Cart", new { sanPhamID = item.ID })"> <i class="fa fa-shopping-cart"></i>  Thêm vào giỏ </a></h3>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-md-4 product-men mt-5">
                                    <div class="men-pro-item simpleCart_shelfItem">
                                        <div class="men-thumb-item text-center">
                                            <img src="@item.Image" style="width:200px;height:250px;" alt="">
                                            <div class="men-cart-pro">
                                                <div class="inner-men-cart-pro">
                                                    <a href="@Url.Action("Details","Home",new { id=item.ID})" class="link-product-add-cart">Quick View</a>
                                                </div>
                                                <span class="product-new-top">New</span>
                                            </div>
                                        </div>
                                        <div class="item-info-product text-center border-top mt-4">
                                            <h4 class="pt-1">
                                                <a href="@Url.Action("Details","Home",new { id=item.ID})">@(ShopOnline.Controllers.HomeController.getString(item.Name))</a>
                                            </h4>
                                            <h4 class="pt-1">
                                                <a href="@Url.Action("Details","Home",new { id=item.ID})">@item.MetaTitle</a>
                                            </h4>
                                            <h4 class="pt-1">
                                              hết hàng
                                            </h4>
                                            <div class="info-product-price my-2">
                                                <span class="item_price">@(string.Format("{0:#,##0}", item.Price))đ</span>
                                                <del>@(string.Format("{0:#,##0}", ((item.Price * 100) / 10)))đ</del>
                                            </div>
                                            <h3 class="text-center"><a class="btn btn-success btn-sm item_add item_1" href="@Url.Action("ThemVaoGio", "Cart", new { sanPhamID = item.ID })"> <i class="fa fa-shopping-cart"></i>  Thêm vào giỏ </a></h3>
                                        </div>
                                    </div>
                                </div>
                            }


                        }
                    </div>
                </div>
                <!-- //first section -->
                <!-- second section -->
                <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">
                    <h3 class="heading-tittle text-center font-italic">All Product</h3>
                    <div class="row">
                        @foreach (var product in Model)
                        {
                            <div class="col-md-4 product-men mt-5">
                                <div class="men-pro-item simpleCart_shelfItem">
                                    <div class="men-thumb-item text-center">
                                        <img src="@product.Image" style="width:200px;height:250px;" alt="">
                                        <div class="men-cart-pro">
                                            <div class="inner-men-cart-pro">
                                                <a href="@Url.Action("Details","Home",new { id=product.ID})" class="link-product-add-cart">Quick View</a>
                                            </div>
                                            <span class="product-new-top">10%</span>
                                        </div>
                                    </div>
                                    <div class="item-info-product text-center border-top mt-4">
                                        <h4 class="pt-1">
                                            <a href="@Url.Action("Details","Home",new { id=product.ID})">@(ShopOnline.Controllers.HomeController.getString(product.Name))</a>
                                        </h4>
                                        <h4 class="pt-1">
                                            <a href="@Url.Action("Details","Home",new { id=product.ID})">@(ShopOnline.Controllers.HomeController.getString(product.MetaTitle))</a>
                                        </h4>
                                        <div class="info-product-price my-2">
                                            <span class="item_price">@(string.Format("{0:#,##0}", product.Price))đ</span>
                                            <del>@(string.Format("{0:#,##0}", product.Price))đ</del>
                                        </div>
                                        <h3 class="text-center"><a class="btn btn-success btn-sm item_add item_1" href="@Url.Action("ThemVaoGio", "Cart", new { sanPhamID = product.ID })"> <i class="fa fa-shopping-cart"></i>  Thêm vào giỏ </a></h3>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>


                    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))
                </div>
                <!-- //second section -->
                <!-- third section -->
                <div class="product-sec1 product-sec2 px-sm-5 px-3">
                    <div class="row">
                        <h3 class="col-md-4 effect-bg">Summer Carnival</h3>
                        <p class="w3l-nut-middle">Get Extra 10% Off</p>
                        <div class="col-md-8 bg-right-nut">
                            <img src="images/image1.png" alt="">
                        </div>
                    </div>
                </div>
                <!-- //third section -->
                <!-- fourth section -->

                <!-- //fourth section -->
            </div>
        </div>
        <!-- //product left -->
        <!-- product right -->
        <div class="col-lg-3 mt-lg-0 mt-4 p-lg-0">
            <div class="side-bar p-sm-4 p-3">
                <div class="search-hotel border-bottom py-2">
                    <h3 class="agileits-sear-head mb-3">Tìm kiếm</h3>
                    <form action="/tim-kiem" method="get">
                        <input type="search" placeholder="Product name..."   id="txtKeyword" name="keyword">
                        <input type="submit" value=" ">
                    </form>
                </div>
                <!-- price -->
                <form class="form-inline" action="/tim-kiem" method="get">
                    <div class="range border-bottom py-2">
                        <h3 class="agileits-sear-head mb-3">Sắp xếp</h3>
                        <div class="w3l-range">
                            <ul>
                                <li>
                                     @Html.ActionLink("Gía từ cao đến thấp", "Index", new { sortOrder = ViewBag.SortDesc })
                                </li>
                                <li class="my-1">
                                      @Html.ActionLink("Gía từ thấp đến cao", "Index", new { sortOrder = ViewBag.SortAsc })
                                </li>                               
                            </ul>
                        </div>
                    </div>
                    </form>
                    <!-- //price -->
                    <!-- discounts -->
                    <div class="left-side border-bottom py-2">
                        <h3 class="agileits-sear-head mb-3">Gía tiền</h3>
                        <ul>
                            <li>
                                @Html.ActionLink("0 - 10 triệu", "Index", new { sortOrder = ViewBag.SortOne })
                            </li>   
                            <li>
                                @Html.ActionLink("10 triệu - 20 triệu", "Index", new { sortOrder = ViewBag.SortTwo })
                            </li> 
                            <li>
                                @Html.ActionLink("20 triệu - 30 triệu", "Index", new { sortOrder = ViewBag.SortThree })
                            </li> 
                            <li>
                                @Html.ActionLink("30 triệu - 40 triệu", "Index", new { sortOrder = ViewBag.SortFour })
                            </li> 
                            <li>
                                @Html.ActionLink("40 triệu - 50 triệu", "Index", new { sortOrder = ViewBag.SortFive })
                            </li> 
                            <li>
                                @Html.ActionLink("50 triệu trở lên", "Index", new { sortOrder = ViewBag.SortSix })
                            </li>                       
                        </ul>
                    </div>
                <div class="left-side border-bottom py-2">
                    <h3 class="agileits-sear-head mb-3">Danh mục sản phẩm</h3>
                    <ul>
                        <li>
                            @Html.Action("ItemMenuType", "Home")
                        </li>
                    </ul>
                </div>
                <div class="left-side border-bottom py-2">
                    <h3 class="agileits-sear-head mb-3">Thương hiệu </h3>
                    <ul>
                        <li>
                            @Html.Action("Brandtype", "Home")
                        </li>
                    </ul>
                </div>
                    <!-- //discounts -->
                    <!-- best seller -->
                @Html.Action("BestSell", "Home")
                    <!-- //best seller -->
</div>
            <!-- //product right -->
        </div>
    </div>
</div>
